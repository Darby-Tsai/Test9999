@model IEnumerable<WebApplication1.MessageModels.Test001>
@{
    ViewBag.Title = "Index";
}
<head>
    <meta charset="utf-8" />
</head>
<table class="table">

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name) 留言於  @Html.DisplayFor(modelItem => item.DateTime_Now)
                <br />
                @Html.DisplayFor(modelItem => item.Memo)
                <br />
            </td>
        </tr>
    }

</table>
@using (Html.BeginForm("Add", "Messages", FormMethod.Post))
{
    @:姓名 @Html.TextBox("name", null)
    <br />
    <br />
    @:內容
    @Html.TextArea("Memo")             
    //<input type="text" id="Memo" name="Memo" TextMode="MultiLine" ; style="width:450px ; height:250px;">
    <br />
    <br />
    <input type="submit" value="送出" />
}
